@model banhang.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<style>
    table {
        border-collapse: collapse;
    }

    tr {
        height: 40px;
    }

    td {
        padding: 10px;
        font-size: 13px;
    }

        td:first-child {
            width: 220px;
            font-weight: bold;
            background-color: #f5f5f5
        }
    .product-detail{
        margin:auto;
        width:500px;
        height:515px;
    }
    a.icon {
        display: block;
        width: 118px;
        height: 32px;
        background-color: #DB3F63;
        text-decoration: none;
        margin-top: 10px;
        text-align: center;
        line-height: 35px;
        border-radius: 10px;
        box-shadow: 0 3px 4px rgba(0, 0, 0, 0.3);
    }
</style>
<h2 style="padding:10px; text-align:center">Chi tiết</h2>

<div class="product-detail box" style=" background-color: white; padding:10px">
    <h3>@Html.DisplayFor(model => model.ProductName)</h3>
    <div>
        @if (@Model.Image != null)
        {
            //var base64 = Convert.ToBase64String(@Model.Image);
            //var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
            <img src="~/upload/@Model.Image" style="width:240px;height:240px;position:relative; top:10%;left:24%;" />
        }
    </div>
    <div>
        <h4 style="padding:5px 0 5px 0;">Thông tin chi tiết</h4>
        <table>
            <tr>
                <td>
                    Giá
                </td>

                <td>
                    @Html.DisplayFor(model => model.Price)
                </td>
            </tr>
            <tr>
                <td>
                    Danh mục
                </td>

                <td>
                    @Html.DisplayFor(model => model.Category)
                </td>
            </tr>

            @*<tr>
                    <td>
                        Danh mục con
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.SubCategory)
                    </td>
                </tr>*@
            <tr>
                <td>
                    Ngày thêm
                </td>

                <td>
                    @Html.DisplayFor(model => model.NgayThem)
                </td>
            </tr>
            <tr>
                <td>
                    Chi tiết
                </td>

                <td>
                    @Html.DisplayFor(model => model.Detail)
                </td>
            </tr>
        </table>
    </div>
    @{
            @Html.ActionLink("Thêm Vào Giỏ","AddToCart", new { id = Model.idProduct, quantity = 1},new { @class = "icon", style="color:white;"})
        }
</div>


